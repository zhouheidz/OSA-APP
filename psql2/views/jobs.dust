            {/noOfJobs}

            {#noOfEvents}
            <li><a href="/PendingEvents"><i class="icon-time"></i><span class="hidden-tablet"> Pending Events </span><span class ="badge" style="background: #d9534f" id='eventCount' name='eventCount'>{noOfEvents}</span></a></li> 
            {/noOfEvents}
            
            <li><a href="/Orgs"><i class="icon-eye-open"></i><span class="hidden-tablet"> Orgs </span></a></li>                                

          </ul>
        </div>
      </div>
      <!-- end: Main Menu -->

      
      <noscript>
        <div class="alert alert-block span10">
          <h4 class="alert-heading">Warning!</h4>
          <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
      </noscript>

      
      <!-- start: Content -->
      <div id="content" class="span10">
      
      
      <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="/profile">Home</a>
          <i class="icon-angle-right"></i> 
        </li>
        <li>
          <i class="icon-edit"></i>
          <a href="#">View</a>
        </li>
      </ul>
      
      <div class="row-fluid sortable">
        <div class="box span12">
          <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>View Pending Jobs</h2>
            <div class="box-icon">
            </div>
          </div>
            <form method = "post">
              <div class="box-content">
                <div hidden>
                  <input type="text" id="job_id" name="job_id" value = {job_id}/>
                </div>
                   {#jobs}
                  <ul class="dashboard-list">
                    <li>
                      <strong>Title:</strong> {title} <br>
                      <strong>Details:</strong> {details}<br>
                      <strong>Posted by:</strong> {up_mail}<br>
                      <strong>Preference:</strong> {preference}<br>   
                      <strong>Company:</strong> <br>                                            
                      <strong>Requirements:</strong> {requirements}<br> 
                      <strong>Deadline:</strong> <br>   

                      <strong>Timestamp:</strong> {timestamp}<br>                       

                      <strong>Status:</strong> <span class="label label-warning">Pending</span> <br><br>  

                    <button class="btn btn-mini btn-primary approve-job" 
                     data-toggle="modal" data-target="#editFormModal"
                     data-timestamp = "{timestamp}" data-title = "{title}" data-details = "{details}" data-preference = "{preference}" data-requirements="{requirements}">
                      Approve
                    </button>

                    <button class="btn btn-mini btn-danger delete-job" data-toggle="modal" data-target="#confirm-delete" data-timestamp = "{timestamp}">
                      Delete
                    </button>   
                           
                   <br>
                  </li>
                  <li>
                  <li>
                {/jobs}
                  </ul>
                </div>
              </form>          
            </div><!--/span-->

            </div>

          </div>
